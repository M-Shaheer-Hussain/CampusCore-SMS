import sqlite3

def initialize_db():
    conn = sqlite3.connect("data/campuscore.db")
    cursor = conn.cursor()

    cursor.execute('''CREATE TABLE IF NOT EXISTS students (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        name TEXT NOT NULL,
        roll_number TEXT UNIQUE NOT NULL,
        class TEXT,
        contact TEXT,
        address TEXT
    )''')

    conn.commit()
    conn.close()